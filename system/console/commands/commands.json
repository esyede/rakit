{
    "clear": {
        "clear:cache": {
            "description": "Clear all cache.",
            "command": "php rakit clear:cache"
        },
        "clear:views": {
            "description": "Clear all view cache.",
            "command": "php rakit clear:views"
        },
        "clear:logs": {
            "description": "Clear all log files.",
            "command": "php rakit clear:logs"
        }
    },
    "job": {
        "job:run": {
            "description": "Run a job.",
            "command": "php rakit job:run send_weekly_email"
        },
        "job:runall": {
            "description": "Run all jobs.",
            "command": "php rakit job:runall"
        }
    },
    "make": {
        "make:controller": {
            "description": "Create a controller.",
            "command": "php rakit make:controller dashboard"
        },
        "make:resource": {
            "description": "Create a resource controller.",
            "command": "php rakit make:resource book"
        },
        "make:model": {
            "description": "Create a model.",
            "command": "php rakit make:model book"
        },
        "make:migration": {
            "description": "Create a migration.",
            "command": "php rakit make:migration create_books_table"
        },
        "make:command": {
            "description": "Create a command.",
            "command": "php rakit make:command greet"
        },
        "make:job": {
            "description": "Create a job.",
            "command": "php rakit make:job notify"
        },
        "make:test": {
            "description": "Create a unit test.",
            "command": "php rakit make:test login"
        }
    },
    "migration": {
        "migrate": {
            "description": "Run all migrations.",
            "command": "php rakit migrate"
        },
        "migrate:rollback": {
            "description": "Roll back the last migration.",
            "command": "php rakit migrate:rollback"
        },
        "migrate:reset": {
            "description": "Roll back all migrations.",
            "command": "php rakit migrate:reset"
        },
        "migrate:refresh": {
            "description": "Roll back and run all migrations.",
            "command": "php rakit migrate:refresh"
        }
    },
    "package": {
        "package:install": {
            "description": "Install a package.",
            "command": "php rakit package:install logviewer"
        },
        "package:uninstall": {
            "description": "Uninstall a package.",
            "command": "php rakit package:uninstall logviewer"
        },
        "package:upgrade": {
            "description": "Upgrade a package.",
            "command": "php rakit package:upgrade logviewer"
        },
        "package:publish": {
            "description": "Publish a package assets.",
            "command": "php rakit package:publish logviewer"
        },
        "package:unpublish": {
            "description": "Unpublish a package assets.",
            "command": "php rakit package:unpublish logviewer"
        }
    },
    "routing": {
        "route:call": {
            "description": "Call route via console.",
            "command": "php rakit route:call get api/user/1"
        }
    },
    "session": {
        "session:gc": {
            "description": "Clear expired session from database.",
            "command": "php rakit session:gc"
        }
    },
    "test": {
        "test:run": {
            "description": "Run test of application folder.",
            "command": "php rakit test:run"
        },
        "test:core": {
            "description": "Run test of system folder.",
            "command": "php rakit test:core --verbose=false"
        },
        "test:package": {
            "description": "Run test of application folder.",
            "command": "php rakit test:package blog"
        }
    },
    "webserver": {
        "serve": {
            "description": "Run the development server.",
            "command": "php rakit serve --port=8000"
        }
    },
    "websocket": {
        "websocket:run": {
            "description": "Run the websocket server.",
            "command": "php rakit websocket:run"
        }
    }
}
